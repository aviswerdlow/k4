{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Crib Control CSV Schema",
  "description": "Schema for validating crib ablation control CSV file",
  "type": "object",
  "properties": {
    "constraints_used": {
      "type": "string",
      "enum": ["anchors_plus_tail"],
      "description": "Must be anchors_plus_tail for control run"
    },
    "feasible": {
      "type": "boolean",
      "const": true,
      "description": "Control must be feasible"
    },
    "reason": {
      "type": "string",
      "const": "success",
      "description": "Control must succeed"
    },
    "pt_sha256": {
      "type": "string",
      "const": "4eceb739ab655d6f4ec87753569b8bf04573fe26d01c0caa68d36776dd052d79",
      "description": "Must match canonical plaintext SHA256"
    },
    "undetermined_count": {
      "type": "integer",
      "const": 0,
      "description": "Control must have zero undetermined positions"
    }
  },
  "required": [
    "constraints_used",
    "feasible",
    "reason",
    "pt_sha256",
    "undetermined_count"
  ],
  "additionalProperties": false
}