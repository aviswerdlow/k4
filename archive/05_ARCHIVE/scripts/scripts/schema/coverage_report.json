{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://k4/schema/coverage_report.json",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "rails"
  ],
  "properties": {
    "schema_version": {"type": "string", "enum": ["1.0.0"]},
    "rails": {
      "type": "object",
      "additionalProperties": true,
      "required": ["anchors_0idx"],
      "properties": {
        "anchors_0idx": {
          "type": "object",
          "additionalProperties": true,
          "required": ["EAST", "NORTHEAST", "BERLINCLOCK"],
          "properties": {
            "EAST": {
              "type": "array",
              "items": {"type": "integer", "minimum": 0},
              "minItems": 2,
              "maxItems": 2,
              "$comment": "EAST [start,end]"
            },
            "NORTHEAST": {
              "type": "array",
              "items": {"type": "integer", "minimum": 0},
              "minItems": 2,
              "maxItems": 2
            },
            "BERLINCLOCK": {
              "type": "array",
              "items": {"type": "integer", "minimum": 0},
              "minItems": 2,
              "maxItems": 2
            }
          }
        }
      }
    },
    "head_lock": {
      "type": "array",
      "items": {"type": "integer", "minimum": 0},
      "minItems": 2,
      "maxItems": 2,
      "$comment": "Head window inclusive"
    },
    "tail_guard": {
      "type": "object",
      "additionalProperties": true,
      "required": ["seam"],
      "properties": {
        "seam": {
          "type": "object",
          "additionalProperties": true,
          "required": ["range", "cuts", "tokens"],
          "properties": {
            "range": {
              "type": "array",
              "items": {"type": "integer", "minimum": 0},
              "minItems": 2,
              "maxItems": 2
            },
            "cuts": {"type": "array", "items": {"type": "integer", "minimum": 0}},
            "tokens": {"type": "array", "items": {"type": "string"}}
          }
        }
      }
    },
    "pt_sha256": {"type": "string", "pattern": "^[a-f0-9]{64}$"},
    "ct_sha256": {"type": "string", "pattern": "^[a-f0-9]{64}$"},
    "proof_sha256": {"type": "string", "pattern": "^[a-f0-9]{64}$"},
    "t2_sha256": {"type": "string", "pattern": "^[a-f0-9]{64}$"},
    "near_gate": {
      "type": "object",
      "additionalProperties": true,
      "required": ["coverage", "f_words", "has_verb", "pass"],
      "properties": {
        "coverage": {"type": "number", "minimum": 0, "maximum": 1},
        "f_words": {"type": "integer", "minimum": 0},
        "has_verb": {"type": "boolean"},
        "pass": {"type": "boolean"}
      }
    },
    "phrase_gate": {
      "type": "object",
      "additionalProperties": true,
      "required": ["accepted_by", "pass"],
      "properties": {
        "accepted_by": {"type": "array", "items": {"type": "string"}},
        "pass": {"type": "boolean"}
      }
    },
    "nulls": {
      "oneOf": [
        {"type": "string", "enum": ["not_run"]},
        {
          "type": "object",
          "additionalProperties": true,
          "required": ["K", "metrics", "publishable"],
          "properties": {
            "K": {"type": "integer", "minimum": 10000},
            "metrics": {
              "type": "object",
              "additionalProperties": true,
              "required": ["coverage", "f_words"],
              "properties": {
                "coverage": {
                  "type": "object",
                  "additionalProperties": true,
                  "required": ["p_raw", "p_holm"],
                  "properties": {
                    "p_raw": {"type": "number", "minimum": 0, "maximum": 1},
                    "p_holm": {"type": "number", "minimum": 0, "maximum": 1}
                  }
                },
                "f_words": {
                  "type": "object",
                  "additionalProperties": true,
                  "required": ["p_raw", "p_holm"],
                  "properties": {
                    "p_raw": {"type": "number", "minimum": 0, "maximum": 1},
                    "p_holm": {"type": "number", "minimum": 0, "maximum": 1}
                  }
                }
              }
            },
            "publishable": {"type": "boolean"}
          }
        }
      ]
    }
  }
}
