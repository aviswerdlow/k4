{
  "hypothesis": "Plaza shadows encode Morse code messages",
  "null_hypothesis": "Shadow patterns are random/coincidental",
  "test_requirements": {
    "rendering": {
      "samples": 2048,
      "resolution": "4096x4096",
      "denoising": false,
      "material": "uniform_gray_diffuse",
      "lighting": "single_sun_only"
    },
    "analysis": {
      "scanlines_to_test": [
        512,
        1024,
        1536,
        2048,
        2560,
        3072,
        3584
      ],
      "threshold_method": "otsu_adaptive",
      "morse_tolerances": {
        "dot": "0.7T to 1.3T",
        "dash": "2.5T to 3.5T",
        "intra_gap": "0.7T to 1.3T",
        "inter_gap": "2.5T to 3.5T",
        "word_gap": "6T to 8T"
      }
    },
    "validation": {
      "p_value_threshold": 0.001,
      "null_samples": 1000,
      "replication_angles": "\u00b15 degrees",
      "text_requirements": [
        "ASCII letters and spaces only",
        "At least 2 dictionary words",
        "Words must be length >= 4",
        "Consistent across replications"
      ]
    }
  },
  "expected_outcomes": {
    "if_real_morse": {
      "p_value": "< 0.001",
      "decoded_text": "Meaningful English phrase",
      "replication": "Same text at different sun angles",
      "morse_fit": "Clean integer ratios (1:3:7)"
    },
    "if_noise": {
      "p_value": "> 0.05",
      "decoded_text": "Random characters or no decode",
      "replication": "Different results each angle",
      "morse_fit": "Poor fit to standard ratios"
    }
  },
  "manual_check_steps": [
    "1. Open rendered shadow image in image editor",
    "2. Look for horizontal bands with regular patterns",
    "3. Measure dot/dash lengths in pixels",
    "4. Calculate ratios - should be close to 1:3",
    "5. Check if gaps follow Morse spacing rules",
    "6. Try manual decode using Morse table"
  ]
}