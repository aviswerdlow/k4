{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://k4/schema/phrase_gate_report.json",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "tracks"
  ],
  "properties": {
    "schema_version": {"type": "string", "enum": ["1.0.0"]},
    "combine": {"type": "string", "enum": ["AND", "OR"]},
    "accepted_by": {
      "type": "array",
      "items": {"type": "string"}
    },
    "pass": {"type": "boolean"},
    "tracks": {
      "type": "object",
      "additionalProperties": true,
      "required": ["flint_v2", "generic"],
      "properties": {
        "flint_v2": {
          "type": "object",
          "additionalProperties": true,
          "required": ["passed", "evidence"],
          "properties": {
            "passed": {"type": "boolean"},
            "evidence": {
              "type": "object",
              "additionalProperties": true,
              "properties": {
                "declination_expression": {"type": "boolean"},
                "instrument_verb_after": {"type": "boolean"},
                "directions_present": {"type": "boolean"},
                "instrument_nouns": {"type": "boolean"},
                "content_count": {"type": "integer", "minimum": 0},
                "max_repeat_non_anchor_content": {"type": "integer", "minimum": 0}
              }
            }
          }
        },
        "generic": {
          "type": "object",
          "additionalProperties": true,
          "required": [
            "passed",
            "perplexity_percentile",
            "pos_score",
            "threshold_T",
            "content_count",
            "max_repeat_non_anchor_content"
          ],
          "properties": {
            "passed": {"type": "boolean"},
            "perplexity_percentile": {"type": "number", "minimum": 0},
            "pos_score": {"type": "number", "minimum": 0},
            "threshold_T": {"type": "number"},
            "content_count": {"type": "integer", "minimum": 0},
            "max_repeat_non_anchor_content": {"type": "integer", "minimum": 0}
          }
        }
      }
    }
  },
  "allOf": [
    {
      "if": {"properties": {"combine": {"const": "AND"}}},
      "then": {
        "properties": {
          "accepted_by": {
            "allOf": [
              {"contains": {"const": "flint_v2"}},
              {"contains": {"const": "generic"}}
            ]
          }
        }
      }
    }
  ]
}
